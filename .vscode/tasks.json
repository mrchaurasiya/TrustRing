{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Android",
      "type": "shell",
      "command": "npx react-native run-android",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Metro Bundler",
      "type": "shell",
      "command": "npx react-native start",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Clean Android Build",
      "type": "shell",
      "command": "cd android && ./gradlew clean",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Android APK (Debug)",
      "type": "shell",
      "command": "cd android && ./gradlew assembleDebug",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Android APK (Release)",
      "type": "shell",
      "command": "cd android && ./gradlew assembleRelease",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "npm test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "npx eslint src/ --ext .ts,.tsx",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
